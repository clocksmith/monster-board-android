<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_card_background_color"
    android:layout_margin="@dimen/default_padding"
    android:padding="@dimen/main_card_padding">
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="5">
    <TextView
        android:id="@+id/view_main_player_card_playerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/main_player_text_size"
        android:padding="8dp"
        android:textColor="@color/user_name_color"/>
    <Spinner
        style="@style/SpinnerAsEditText"
        android:id="@+id/view_main_player_card_monsterSpinner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/view_main_player_card_monsterName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/main_player_text_size"
        android:padding="8dp"
        android:textColor="@color/monster_name_color"/>
  </LinearLayout>
  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="2"
      android:gravity="center"
      android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
      <ImageView
          android:src="@drawable/star"
          android:layout_width="@dimen/main_icon_size"
          android:layout_height="@dimen/main_icon_size"
          android:layout_gravity="center"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
      <ImageView
          android:src="@drawable/heart"
          android:layout_width="@dimen/main_icon_size"
          android:layout_height="@dimen/main_icon_size"
          android:layout_gravity="center"/>
    </FrameLayout>
  </LinearLayout>
  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="3"
      android:gravity="center"
      android:orientation="vertical"
      android:padding="@dimen/default_padding">
    <com.gamesmith.scoreboard.room.VpNumberPicker
        android:id="@+id/view_main_player_card_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_padding"/>
    <com.gamesmith.scoreboard.room.HpNumberPicker
        android:id="@+id/view_main_player_card_hp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
  </LinearLayout>
</LinearLayout>