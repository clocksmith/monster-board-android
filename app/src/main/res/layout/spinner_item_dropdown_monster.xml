<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/spinner_item_dropdown_height">
  <ImageView
      android:id="@+id/spinner_item_dropdown_monster_imageView"
      android:layout_width="@dimen/spinner_item_dropdown_height"
      android:layout_height="@dimen/spinner_item_dropdown_height"/>
  <TextView
      android:id="@+id/spinner_item_dropdown_monster_textView"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="center_vertical|start"/>
</LinearLayout>