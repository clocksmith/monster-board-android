<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/spinner_item_dropdown_height">
  <ImageView
      android:id="@+id/spinner_item_dropdown_monster_imageView"
      android:layout_width="@dimen/spinner_item_dropdown_height"
      android:layout_height="@dimen/spinner_item_dropdown_height"
      android:padding="8dp"/>
  <TextView
      android:id="@+id/spinner_item_dropdown_monster_name"
      android:layout_width="80dp"
      android:layout_height="match_parent"
      android:textColor="@color/monster_name_color"
      android:layout_marginStart="20dp"
      android:gravity="center_vertical|start"/>
  <TextView
      android:id="@+id/spinner_item_dropdown_monster_source"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:layout_marginStart="8dp"
      android:textColor="@color/player_name_color"
      android:gravity="center_vertical|start"/>
</LinearLayout>