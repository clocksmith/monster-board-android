<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="@color/small_card_background_color"
    android:padding="@dimen/small_card_padding">
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="5">
    <TextView
        android:id="@+id/list_item_player_playerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:textColor="@color/user_name_color"
        android:textSize="@dimen/small_player_text_size"/>
    <ImageView
        android:id="@+id/list_item_player_monsterImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/list_item_player_monsterName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:textColor="@color/monster_name_color"
        android:textSize="@dimen/small_player_text_size"/>
  </LinearLayout>
  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="2"
      android:gravity="center"
      android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
      <ImageView
          android:id="@+id/list_item_player_vpIcon"
          android:src="@drawable/star"
          android:layout_width="@dimen/small_icon_size"
          android:layout_height="@dimen/small_icon_size"
          android:layout_gravity="center"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
      <ImageView
          android:id="@+id/list_item_player_hpIcon"
          android:src="@drawable/heart"
          android:layout_width="@dimen/small_icon_size"
          android:layout_height="@dimen/small_icon_size"
          android:layout_gravity="center"/>
    </FrameLayout>
  </LinearLayout>
  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="3"
      android:gravity="center"
      android:orientation="vertical"
      android:padding="@dimen/default_padding">
    <TextView
        android:id="@+id/list_item_player_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="@dimen/small_player_point_text_size"
        android:textColor="@color/vp_color"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_padding"/>
    <TextView
        android:id="@+id/list_item_player_hp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="@dimen/small_player_point_text_size"
        android:textColor="@color/hp_color"
        android:gravity="center"/>
  </LinearLayout>
</LinearLayout>